{
    "appenders": [
        {
            "type": "dateFile",
            "filename": "${opts:base}/memdb-${opts:shardId}.log",
            "pattern": "-yyyyMMdd",
            "layout": {
                "type": "basic"
              }
            ,"backups": 5,
            "category":"memdb"
        },
        {
            "type": "dateFile",
            "filename": "${opts:base}/memdb-server-${opts:shardId}.log",
            "pattern": "-yyyyMMdd",
            "layout": {
                "type": "basic"
              }
            ,"backups": 5,
            "category":"memdb-server"
        }
    ],

    "levels" : {
    },

    "replaceConsole": true,
    "lineDebug": false
}
